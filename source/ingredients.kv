<IngredientsScreen>:

	name: 'IngredientsScreen'

	RelativeLayout:
		Label:
			text: 'Ingredient Screen'
			pos_hint: {'x': 0, 'top': 1}
			size_hint: (0.3, 0.25)

<IngredientScroller>:
	pos_hint: {'center_y': 0.5}
	size_hint: (1, 0.5)
	do_scroll_x: False

<Add_Ingredient_Button>:
	text: 'Add Ingredient'
	pos_hint: {'right': 1, 'y': 0}
	size_hint: (0.5, 0.25)

<Add_Ingredient_Layout>:

<Cancel_Popup_Button>:
	text: 'Cancel'
	pos_hint: {'y': 0}
	size_hint: (0.2, 0.2)

<Text_Input_Popup>:
	text: "Enter Ingredient"
	size_hint: (1, 0.2)
	pos_hint: {'top': 1}

<Ok_Popup_Button>:
	text: "Ok"
	size_hint: (0.2, 0.2)
	pos_hint: {'right': 1}

<Delete_Ingredient_Button>:
	text: 'Delete Ingredient'
	pos_hint: {'x': 0, 'y': 0}
	size_hint: (0.5, 0.25)

<Recipe_Button>:
	text: 'Build Receipes'
	pos_hint: {'center_x': 0.5, 'top': 1}
	size_hint: (0.3, 0.25)
